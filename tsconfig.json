{
  "compilerOptions": {
    "target": "es2017",                                     
    "module": "commonjs",
    "lib": ["ES6"],                                  
    "rootDir": "./src",                                  
    "baseUrl": ".",
    "outDir": "./dist",                           
    "strict": true,                                 
    "esModuleInterop": true,                        
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ] 
}
